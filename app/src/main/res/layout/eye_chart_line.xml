<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="30dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/eyeChart_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="400" />

    <TextView
        android:id="@+id/eyeChartTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/eyeChartTextValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/eyeChart_text_size"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TZOPC" />

    <LinearLayout
        android:id="@+id/image_linear_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/eyeChartTextValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/eyeChart_text_size"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/image_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:tint="@color/lb_tv_white"
            tools:src="@drawable/house" />

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:tint="@color/lb_tv_white"
            tools:src="@drawable/house" />

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:tint="@color/lb_tv_white"
            tools:src="@drawable/house" />

        <ImageView
            android:id="@+id/image_4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:tint="@color/lb_tv_white"
            tools:src="@drawable/house" />

        <ImageView
            android:id="@+id/image_5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:tint="@color/lb_tv_white"
            tools:src="@drawable/house" />

    </LinearLayout>

    <TextView
        android:id="@+id/eyeChartTextValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="400" />


</androidx.constraintlayout.widget.ConstraintLayout>
